div(ng-controller="NavbarCtrl")
  header(role="navigation")
    div.container
      a.button-collapse.top-nav.waves-effect.waves-light.circle(href="#" data-activates="nav-mobile")
        i.mdi-navigation-menu
    ul#nav-mobile.side-nav
      li.logo
        a#logo-container.brand-logo(href="/") 가계부
      include submenus

  script.
    (function ($) {
      $(function () {
        $('.button-collapse').sideNav({
          edge: 'left',
          closeOnClick: true
        });
      }); // end of document ready
    })(jQuery); // end of jQuery name space
