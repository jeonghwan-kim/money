div.row
  form.col.s12(name="form" ng-submit="save(form)" novalidate)
    div.row
      div.col.s12.input-field
        div(datepicker ng-model="expense.date")
      div.col.s12.input-field
        input.validate(name="text" ng-model="expense.text" type="text" required="true" ng-trim="true")
        label.active(for="text") 내용
      div.col.s12.input-field
        input.validate(name="amount" ng-model="expense.amount" type="number" required="true")
        label.active(for="amount") 금액
      div.col.s12.file-field.input-field
        input.file-path.validate(type="text" ng-model="uploader.queue[0].file.name")
        div.btn
          span File
          input(type="file" nv-file-select="" uploader="uploader")
      div(ng-repeat="item in uploader.queue")
        div(ng-show="uploader.isHTML5" ng-thumb="{file: item._file}")
        button(ng-click="item.upload()") 이미지 업로드



      div.col.s12
        blockquote(ng-show="form.date.$error.required || form.text.$error.required || form.amount.$error.required")
          | 모든 필드를 입력하세요
        blockquote(ng-show="form.amount.$error.number")
          | 금액은 숫자만 입력하세요
        blockquote(ng-bind="errors.other")

      div.col.s12
        button.btn.waves-effect.waves-light.btn-large(type="submit" ng-class="{disabled: try || form.$invalid}") 저장
        a.btn.waves-effect.waves-light.btn-large(href="/" style="margin-left:5px;") 취소
