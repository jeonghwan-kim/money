.container(ng-controller="ExpenseCtrl")
  h2.page-header.text-center
    a(href='/') Money
  .row
    //- 지출 내용
    .col-sm-10
      .form-group
        a.btn.btn-primary.btn-lg.btn-block(ng-href="/new")
          span.glyphicon.glyphicon-pencil
          | &ensp;지출 입력
      div(ng-show="sum && sum > 0 && expense.length > 0")
        h4.text-center
          span.label.label-primary 총 지출:&ensp;{{sum | number}} 원
      table.table
        thead
          tr#table-header
            th 날짜
            th 지출 내용
            th.text-right 금액
            th.edit
          tr(ng-repeat="item in expense | orderBy: ['-date', '-id']")
            td.date {{item.date | date:'yyyy-MM-dd'}}
            td {{item.text}}
            td.text-right {{item.amount | number}}
            td.text-right.edit
              a.text-muted(ng-href="/edit/{{item.id}}/?date={{item.date}}&text={{item.text}}&amount={{item.amount}}")
                .glyphicon.glyphicon-pencil
    //- 월 목록
    .col-sm-2
      .bs-docs-sidebar(ng-if="yearmonth")
        ul.nav.bs-docs-sidenav
          li(ng-repeat="month in yearmonth" ng-class="{active: month==curMonth}")
            a(ng-href="/expense/{{month}}" ng-bind="month")
      .form-group
        a.btn.btn-danger.btn-lg.btn-block(ng-click="signout()")
          span.glyphicon.glyphicon-off
          | &ensp;로그아웃