.container
  h1.title
    a(href="/")
      | OMG
      span(style="font-size:95%") 가계부
  .jumbotron
    h3.text-muted
      span.glyphicon.glyphicon-info-sign
      | &ensp;지출 수정
    form(ng-submit="submit()")
      .form-group
        input.form-control.input-lg(type="text" ng-model="date" placeholder="날짜" required)
      .form-group
        input.form-control.input-lg(type="text" ng-model="text" placeholder="내용" required focus-me)
      .form-group
        input.form-control.input-lg(type="text" ng-model="amount" placeholder="금액" required)
      hr.brand-gray-light
      .btn-group.btn-group-justified
        .btn-group
          a.btn.btn-default.btn-lg(ng-click="cancel()")
            span.glyphicon.glyphicon-arrow-left
            | &ensp;취소
        .btn-group
          a.btn.btn-danger.btn-lg(ng-click="delete()")
            span.glyphicon.glyphicon-trash
            | &ensp;삭제
        .btn-group
          button.btn.btn-success.btn-lg(type="submit" ng-disabled="!text || !validAmount")
            span.glyphicon.glyphicon-ok
            | &ensp;저장
